{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx"          
  },
  "include": ["src", "app/api", "app/api/contact", "app/pages"],
  "exclude": ["node_modules", "dist"]
}
